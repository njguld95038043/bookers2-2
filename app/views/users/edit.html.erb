<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
          <% if @user.errors.any? %>
           <%= @user.errors.count %> error prohibited this obj from being saved:
          <ul>
           <% @user.errors.full_messages.each do |message| %>
           <li><%= message %></li>
           <% end %>
          </ul>
          <% end %>
        <%= form_with model: @user, local:true do |f| %>
          <div class="form-group">
           <label for="user_name">Name</label>
           <%= f.text_field :name, class:"form-control", id:"user_name" %>
           <label for="user_profile_image">Image</label><br />
           <%= f.file_field :profile_image, class:"form-control-file", id:"user_profile_image", accept:"profile_image/*" %><br />
           <label for="user_introduction">Introduction</label><br />
           <%= f.text_area :introduction, class:"form-control", id:"user_introduction" %><br />
           <%= f.submit "Update User", class:"btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>